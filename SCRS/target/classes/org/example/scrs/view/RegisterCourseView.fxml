<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.scrs.RegisterCourseController">
    <children>
        <VBox styleClass="form-container" alignment="CENTER" spacing="20">
            <children>
                <Label styleClass="form-title" text="📚 Course Registration" />
                <Label text="Select courses you want to register for:" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />

                <VBox spacing="15" alignment="CENTER">
                    <children>
                        <Label text="Available Courses" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 16px;" />
                        <ListView fx:id="courseListView" styleClass="list-view" prefHeight="200" prefWidth="350" />

                        <Label text="💡 Tip: Hold Ctrl/Cmd to select multiple courses" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                    </children>
                </VBox>

                <Label fx:id="msgLabel" styleClass="success-label" />

                <HBox spacing="15" alignment="CENTER">
                    <children>
                        <Button styleClass="primary-button" text="✅ Register Selected" onAction="#registerCourses" />
                        <Button styleClass="secondary-button" text="← Back" onAction="#goToDashboard" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
