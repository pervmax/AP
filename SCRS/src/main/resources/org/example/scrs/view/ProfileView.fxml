<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.scrs.ProfileController">
    <children>
        <VBox styleClass="form-container" alignment="CENTER" spacing="20">
            <children>
                <Label styleClass="form-title" text="👤 Manage Profile" />
                <Label text="Update your personal information below:" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />

                <VBox spacing="15" alignment="CENTER">
                    <children>
                        <VBox spacing="5" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Full Name:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <TextField fx:id="nameField" styleClass="form-field" promptText="Enter your full name" />
                            </children>
                        </VBox>

                        <VBox spacing="5" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Email Address:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <TextField fx:id="emailField" styleClass="form-field" promptText="Enter your email address" />
                            </children>
                        </VBox>

                        <VBox spacing="5" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Program:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <TextField fx:id="programField" styleClass="form-field" promptText="Enter your program (e.g., CSIT, BCA)" />
                            </children>
                        </VBox>

                        <VBox spacing="5" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Semester:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <TextField fx:id="semesterField" styleClass="form-field" promptText="Enter your current semester" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <Label fx:id="statusLabel" styleClass="success-label" />

                <HBox spacing="15" alignment="CENTER">
                    <children>
                        <Button styleClass="primary-button" text="💾 Save Profile" onAction="#saveProfile" />
                        <Button styleClass="secondary-button" text="← Back" onAction="#goToDashboard" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
